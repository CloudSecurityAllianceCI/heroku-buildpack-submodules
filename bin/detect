#!/bin/sh

# Determine if this buildpack should be applied.

BUILD_DIR=$1

if [ ! -d "$BUILD_DIR/.git" ]; then
  echo "-----> Skipping submodule init: .git directory not found" >&2
  exit 1
fi

if [ ! -f "$BUILD_DIR/.gitmodules" ]; then
  echo "-----> Skipping submodule init: .gitmodules file not found" >&2
  exit 1
fi

if [ ! -f "$BUILD_DIR/.git/config" ]; then
  echo "-----> Skipping submodule init: .git/config not found" >&2
  exit 1
fi

echo "-----> Submodule support detected"
echo "submodules"
exit 0
